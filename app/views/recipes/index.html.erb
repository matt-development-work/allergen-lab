<h1>All Recipes</h1>

<h2>Search for a recipe here: </h2>

<%= form_tag(recipes_path, method: "get") do %>
  <%= label_tag "Search for:" %>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag("Search") %>
<% end %>

<ul>
    <% @recipes.each do |r| %>
        <li><%= link_to r.name, recipe_path(r) %></li>
    <% end %>
</ul>
